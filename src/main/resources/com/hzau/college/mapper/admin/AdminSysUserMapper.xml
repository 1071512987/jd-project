<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzau.college.mapper.admin.AdminSysUserMapper">

    <resultMap id="rmGetRoles"
               type="SysUserAndRolesDto">
        <result column="user_id" property="id"/>
        <result column="phone" property="phone"/>
        <result column="nickname" property="nickname"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="salt" property="salt"/>
        <result column="created_time" property="createTime"/>
        <result column="login_time" property="loginTime"/>
        <result column="status" property="status"/>
        <result column="icon" property="icon"/>
        <collection property="adminRoles" ofType="AdminSysRole">
            <result column="role_id" property="id"/>
            <result column="role_name" property="name"/>
        </collection>
    </resultMap>

    <select id="getRolesByName"
            resultMap="rmGetRoles">
        SELECT
            u.id user_id, u.nickname, u.username, u.phone, u.password, u.salt, u.create_time, u.login_time, u.status, u.icon,
            r.id role_id, r.name role_name
        FROM
            admin_sys_user u
        LEFT JOIN
            admin_sys_user_role ur
        ON
            u.id = ur.user_id
        LEFT JOIN
            admin_sys_role r
        ON
            ur.role_id = r.id
        WHERE
            u.username = #{username};
    </select>


    <select id="getRolesByPhone"
            resultMap="rmGetRoles">
        SELECT
            u.id user_id, u.nickname, u.username, u.phone, u.password, u.salt, u.create_time, u.login_time, u.status, u.icon,
            r.id role_id, r.name role_name
        FROM
            admin_sys_user u
                LEFT JOIN
            admin_sys_user_role ur
            ON
                u.id = ur.user_id
                LEFT JOIN
            admin_sys_role r
            ON
                ur.role_id = r.id
        WHERE
            u.phone = #{phone};
    </select>


</mapper>

